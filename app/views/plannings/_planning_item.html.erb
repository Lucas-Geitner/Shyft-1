<div class="card-planning">
  <div class="card-planning-description">
    <div class="card-planning-dates">
      <span><i class="fa fa-calendar"></i> <%= planning.start_date.strftime("%A, %b %e") %></span>
      <span class="separator">-</span>
      <span><%= planning.end_date.strftime("%A, %b %e") %></span>
    </div>
    <div class="card-planning-users">
        <%planning.users.uniq.first(4).each do |user|%>
          <div class="user-circle" style ="background-color:<%=COLORS.sample%>; color:white;">
            <%= user.first_name.split("").first%>
          </div>
        <% end %>
        <% if planning.users.uniq.count >4 %>
          <div class="user-circle" style ="border: 2px solid #C1C1C1;color: #C1C1C1;">+<%= planning.users.uniq.count - 4%></div>
        <% end %>
    </div>
  </div>
  <div class="card-planning-controls">
    <div class="planning-owner">Last edited by <strong><%= planning.user.first_name%> <%= planning.user.last_name%></strong> 3 days  ago</div>
    <div class="list-controls">
      <%= link_to "Voir", planning_path(planning), class: "btn btn-default" %>
      <%= link_to "DÃ©clarer", planning_path(planning), class: "btn btn-default" %>
      <%= link_to planning_path(planning), class: "btn btn-default" do %>
        <i class="fa fa-print"></i>
      <% end %>
    </div>
  </div>
</div>

<!DOCTYPE html>
<html>
  <head>
    <title>Shyft - <%= yield(:title_tag).presence || "No hassle time management" %></title>
    <%= csrf_meta_tags %>
    <%= favicon_link_tag 'favicon.ico' %>
    <meta property="og:title" content="<%= yield(:title_tag).presence || "No hassle time management" %>" />

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="Shyft: No hassle time management">
    <%= stylesheet_link_tag 'application', media: 'all' %>
  </head>
  <body>
    <%= render 'shared/navbar' %>

    <% if user_signed_in? %>
      <div id="wrapper">
        <%= render 'shared/sidebar' %>
        <div class="page-content-wrapper">
          <%= render 'shared/flashes' %>
          <%= yield %>
        </div>
      </div>
    <% else %>
      <div class="page-content-wrapper">
        <%= render 'shared/flashes' %>
        <%= yield %>
      </div>
    <% end %>
    <%= javascript_include_tag 'application' %>
    <%= cloudinary_js_config %>
    <%= yield :scripts %>
  </body>
</html>

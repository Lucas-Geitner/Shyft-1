<%= simple_nested_form_for user, url: custom_path, remote: true do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.fields_for membership do |builder| %>
    <%= builder.input :role, type: :select, collection: Membership::ROLES %>
  <% end %>
  <%= f.fields_for ability do |builder| %>
    <%= builder.input :poste, as: :check_boxes, collection: Poste.all %>
  <% end %>
  <%= f.input :contract, as: :attachinary %>
  <%= f.button :submit, value: "Create" %>
<% end %>



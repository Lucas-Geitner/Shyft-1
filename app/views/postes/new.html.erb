<%= render 'form'%>
<div class="container">
  <h1>Liste des Postes</h1>
  <div class="row">
    <div class="panel panel-success">
      <div class="panel-heading">
        <h3 class="panel-title">Postes</h3>
      </div>
      <div class="panel-body">

        <% @postes.each do |poste|%>
          <div class="col-xs-12">
            <div class="poste-flex">
              <div>
                <%= poste.name %>
              </div>
              <div style="flex-grow: 1">
              </div>
              <div>
                <%= link_to "Modifier", edit_poste_path(poste),class: "btn btn-primary" %>
              </div>
              <div>
                <%= link_to "Supprimer", poste_path(poste), method: :delete, data: {confirm: "are you sure?"}, class: "btn btn-danger" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

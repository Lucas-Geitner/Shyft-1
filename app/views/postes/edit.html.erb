<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <%= simple_form_for(@poste) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
        <%= f.input :name %>
         </div>
        <div class="form-actions">
        <%= f.submit 'Modifier'%>
        </div>
      <% end %>
    </div>
  </div>
</div>


<% content_for :title_tag do %>
Modifier un poste: <%= @poste.name %>
<% end %>
